{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "overrides": [
    {
      "files": ["src/logs.js"],
      "rules": {
        "no-console": ["off"]
      }
    },
    {
      "files": ["src/*.js"],
      "rules": {
        "no-underscore-dangle": ["off"]
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "import/extensions": ["error", "always"]
  },
  "ignorePatterns": ["dist", "serve", "node_modules"]
}
